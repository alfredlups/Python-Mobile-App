<RegisterPatient>:
    name: "register-patient"

    first_name: first_name
    last_name: last_name
    mobile_number: mobile_number
    email: email
    password: passw

    MDFloatLayout:
        cols:1
        MDFloatLayout:
            size: root.width, root.height/2
            MDIconButton:
                icon: "arrow-left"
                pos_hint: {"x":0.05, "y":.9}
                size_hint: None, None
                size: 50,50
                on_release:
                    root.manager.transition.direction = "right"
                    app.back_to_front()

            MDLabel:
                text: "Register Patient"
                halign: "center"
                text_color: 0, 0, 1, 1
                size_hint: 0.8, 0.4
                pos_hint: {"x":0.1, "top":1.05}

            MDTextField:
                id: first_name
                hint_text: "First Name"
                size_hint: 0.8, None
                pos_hint:  {"x": .1, "y": .75}

            MDTextField:
                id: last_name
                hint_text: "Last Name"
                size_hint: 0.8, None
                pos_hint: {"x":0.1, "y":.67}

            MDTextField:
                id: mobile_number
                hint_text: "Mobile Number"
                size_hint: 0.8, None
                pos_hint: {"x":0.1, "y":.59}

            MDTextField:
                id: email
                hint_text: "Email Address"
                size_hint: 0.8, None
                pos_hint: {"x":0.1, "y":.51}

            MDTextField:
                id: passw
                hint_text: "Password"
                size_hint: 0.8, None
                pos_hint: {"x":0.1, "y":.43}
                password: True

            MDRaisedButton:
                text: "Submit"
                pos_hint: {"x":0.075, "y":.34}
                size_hint: 0.85, 0.07
                font_size: (root.width**2 + root.height**2) / 14**4
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = "left"
                    root.register()
